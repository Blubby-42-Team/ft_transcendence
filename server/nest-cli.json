{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.app.json"
  },
  "monorepo": true,
  "root": "server",
  "projects": {
    "server": {
      "type": "application",
      "root": "server",
      "entryFile": "main",
      "sourceRoot": "src/",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    },
    "libs": {
      "type": "library",
      "root": "libs/libs",
      "entryFile": "index",
      "sourceRoot": "libs/libs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/libs/tsconfig.lib.json"
      }
    }
  }
}